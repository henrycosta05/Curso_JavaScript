<%- include('./includes/head') %>
<%- include('./includes/nav') %>

    <div class="container">
        <div class="row">

            <div class="col-lg-2"></div>
            <div class="col-lg-8 my-5">
                <h1 class=" text-center" >LOGIN</h1>
                <p class="text-center lead">Faça login ou crie conta abaixo</p>

                <%- include('includes/messages'); %>

                <div class="row">

                    <div class="col-lg">
                        <h4>Faça seu cadastro</h4>
                        <p>Se você ainda não tem conta, preencha o formulário abaixo:</p>
                        <form action="/login/register" method="POST">
                            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                            <div class="form-group">
                              <label for="exampleInputEmail1">Seu email</label>
                              <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                              <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                            </div>
                            <div class="form-group">
                              <label for="exampleInputPassword1">Sua senha</label>
                              <input type="password" class="form-control" id="exampleInputPassword1" name=password>
                            </div>
                            <button type="submit" class="btn btn-primary">Criar minha conta</button>
                          </form>

                    </div>

                    <div class="col-lg">
                        <h4>faça seu login</h4>

                        <p>Se você já tem uma conta, preencha o formulário abaixo:</p>
                        <form action="/login/login" method="POST">
                          <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                            <div class="form-group">
                              <label for="exampleInputEmail1">Seu email</label>
                              <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                              <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                            </div>
                            <div class="form-group">
                              <label for="exampleInputPassword1">Sua senha</label>
                              <input type="password" class="form-control" id="exampleInputPassword1" name=password>
                            </div>
                            <button type="submit" class="btn btn-primary">Entrar</button>
                          </form>

                    </div>
                </div>


            </div>
            <div class="col-lg-2"></div>


        </div>

    </div>

<%- include('./includes/footer') %>
 